{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react", // یا "react-jsx" برای نسخه‌های جدیدتر React
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "extends": "expo/tsconfig.base",
}